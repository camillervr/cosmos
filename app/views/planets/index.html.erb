<div id="4col">
  <div class="planet-cards container">
    <h1 class="mb-5 text-white">Planets around the galaxy</h1>
    <div class="row">

      <div class="col-12 col-sm-6 col-md-3 col-mb-3">
        <div class= "planet-card">
          <img src="../assets/mars" class="w-100" alt="">
          <div class="planet-card-info">
            <div class="d-flex justify-content-between">
              <h3>Mars</h3>
              <div class="rating">4.5
                <i class="fa fa-star checked"></i>
              </div>
            </div>
            <div class="planet-card-object d-flex justify-content-between">PLANET
              <div class="price"><strong>â‚¬ 300</strong> / day</div>
            </div>
          </div>
        </div>
      </div>

      <% @planets.each do |planet| %>
        <div class="col-12 col-sm-6 col-md-3 col-mb-3">
          <%= link_to planet_path(planet), class:"text-decoration-none" do %>
            <div class= "planet-card">
              <img src="../assets/mars" class="w-100" alt="">
              <div class="planet-card-info">
                <div class="d-flex justify-content-between">
                  <h3><%= planet.name %></h3>
                  <p class="rating">4.5
                    <i class="fa fa-star checked"></i>
                  </p>
                </div>
                <div class="planet-card-object d-flex justify-content-between">
                  <%= planet.object.upcase %>
                  <div class="price"><strong><%= planet.price_per_day %></strong> / day
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>



    </div>
  </div>
</div>
